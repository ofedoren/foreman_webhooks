<% title _('Webhooks') %>
<% title_actions(new_link(_('Create Webhook'))) %>

<table class="<%= table_css_classes 'table-fixed' %>">
  <thead>
    <tr>
      <th class="col-md-6"><%= sort :name, as: s_('Webhooks|Name') %></th>
      <th class="col-md-5"><%= sort :target_url, as: s_('Webhooks|Target Url') %></th>
      <th class="col-md-1"><%= _('Actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @webhooks.each do |webhook| %>
      <tr>
        <td class="ellipsis">
          <%= link_to_if_authorized webhook.name, hash_for_edit_webhook_path(id: webhook) %>
        </td>
        <td class="ellipsis">
          <%= webhook.target_url %>
        </td>
        <td><%= action_buttons display_delete_if_authorized hash_for_webhook_path(id: webhook), data: { confirm: _("Delete %s?") % webhook.target_url } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
